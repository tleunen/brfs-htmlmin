{
    "env": {
        "node": true
    },
    "rules": {
        "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
        "camelcase": [2, {"properties": "never"}],
        "comma-style": [2, "last"],
        "curly": [2, "multi-line"],
        "indent": 2,
        "no-underscore-dangle": 0,
        "no-use-before-define": [2, "nofunc"],
        "quotes": [2, "single", "avoid-escape"],
        "semi": [2, "always"],
        "space-before-function-paren": [2, "never"],
        "strict": [2, "global"]
    }
}